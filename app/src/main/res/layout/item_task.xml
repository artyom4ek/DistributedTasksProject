<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/task_description"
        android:layout_toRightOf="@+id/task_description"
        android:text="назва задачі"
        android:textSize="16dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/task_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/task_end_label"
        android:layout_toRightOf="@+id/task_end_label"
        android:text="термін"
        android:textColor="@color/colorTaskEnd" />

    <!-- android:layout_marginTop="5dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    -->
    <TextView
        android:id="@+id/task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/task_end_label"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="опис задачі" />

    <TextView
        android:id="@+id/task_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/task_end"
        android:layout_alignBottom="@+id/task_end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Виконати до " />

    <TextView
        android:id="@+id/task_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="пріоритет" />

</RelativeLayout>